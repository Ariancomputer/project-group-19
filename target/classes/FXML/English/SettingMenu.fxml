<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.SettingController"
            prefHeight="780.0" prefWidth="750.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="Setting" alignment="CENTER"/>
            <VBox  alignment="CENTER" spacing="20">
                <Label text="Game difficulty" alignment="CENTER" />
                <Button text="Easy" onMouseClicked="#easy" minWidth="30" maxWidth="200"/>
                <Button text="Normal" onMouseClicked="#normal" minWidth="30" maxWidth="200"/>
                <Button text="Hard" onMouseClicked="#hard" minWidth="30" maxWidth="200"/>
            </VBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="Ball count" alignment="CENTER" />
                <ChoiceBox fx:id="choiceBox" onMouseClicked="#choiceBox"  minWidth="30" maxWidth="200"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="Language" alignment="CENTER" />
                <Button text="English" onMouseClicked="#English" minWidth="30" maxWidth="200"/>
                <Button text="Persian" onMouseClicked="#Persian" minWidth="30" maxWidth="200"/>
            </HBox>
            <Button text="Back" onMouseClicked="#back" minWidth="30" maxWidth="200"/>
        </VBox>
    </center>

</BorderPane>
