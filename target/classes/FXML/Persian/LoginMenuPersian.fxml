<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.LoginController"
            prefHeight="780.0" prefWidth="750.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="منو ورود" alignment="CENTER"/>
            <TextField promptText="نام کابری" maxWidth="300" fx:id="username"/>
            <PasswordField promptText="رمز عبور" maxWidth="300" fx:id="password"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="ثبت" onMouseClicked="#submit" minWidth="30" maxWidth="200"/>
                <Button text="ورود به عنوان مهمان" onMouseClicked="#skip" minWidth="30" maxWidth="200"/>
                <Button text="ثبت نام" onMouseClicked="#register" minWidth="30" maxWidth="200"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
