<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ProfileController"
            prefHeight="780.0" prefWidth="750.0">
    <center>

        <VBox alignment="CENTER" spacing="40">
            <Label text="منو پروفایل" alignment="CENTER"/>
            <VBox alignment="CENTER" spacing="20">
                <Button text="تغییر نام کاربری" onMouseClicked="#ChangeUserName" minWidth="30" maxWidth="200"/>
                <Button text="حذف حساب کاربری" onMouseClicked="#RemoveAccount" minWidth="30" maxWidth="200"/>
                <Button text="انتخاب عکس" onMouseClicked="#ChooseAvatar" minWidth="30" maxWidth="200"/>
                <Button text="خروج از حساب کاربری" onMouseClicked="#logout" minWidth="30" maxWidth="200"/>
                <Button text="برگشت" onMouseClicked="#back" minWidth="30" maxWidth="200"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
