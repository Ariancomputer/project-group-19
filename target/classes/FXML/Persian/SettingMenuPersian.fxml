<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.SettingController"
            prefHeight="780.0" prefWidth="750.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="تنظیمات" alignment="CENTER"/>
            <VBox  alignment="CENTER" spacing="20">
                <Label text="سطح دشواری بازی" alignment="CENTER" />
                <Button text="اسان" onMouseClicked="#easy" minWidth="30" maxWidth="200"/>
                <Button text="متوسط" onMouseClicked="#normal" minWidth="30" maxWidth="200"/>
                <Button text="سخت" onMouseClicked="#hard" minWidth="30" maxWidth="200"/>
            </VBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="تعداد توپ" alignment="CENTER" />
                <ChoiceBox fx:id="choiceBox" onMouseClicked="#choiceBox"  minWidth="30" maxWidth="200"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="زبان" alignment="CENTER" />
                <Button text="English" onMouseClicked="#English" minWidth="30" maxWidth="200"/>
                <Button text="فارسی" onMouseClicked="#Persian" minWidth="30" maxWidth="200"/>
            </HBox>
            <Button text="برگشت" onMouseClicked="#back" minWidth="30" maxWidth="200"/>
        </VBox>
    </center>

</BorderPane>
