<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenu"
            prefHeight="400.0" prefWidth="600.0">
    <Label text="Fill register form" fx:id="label" translateX="700" translateY="220"/>
    <VBox alignment="CENTER" spacing="20" translateX="700" translateY="240">
        <TextField fx:id="username"  promptText="Username"/>
        <TextField fx:id="passwordShow" visible="false" promptText="Password"/>
        <TextField fx:id="email"  promptText="Email"/>
        <TextField fx:id="nickname" promptText="Nickname"/>
        <TextField fx:id="slogan" visible="false" promptText="slogan"/>
        <Button fx:id="randomSloganButton" text="random" visible="false" onMouseClicked="#randomSlogan"/>
        <CheckBox fx:id="check" onMouseClicked="#checkingSlogan"/>
    </VBox>
    <PasswordField fx:id="passwordHide" promptText="Password" translateX="700" translateY="285"/>
    <CheckBox translateY="288" translateX="870" onMouseClicked="#showAndHidePassword"/>
    <Button text="random" translateY="288" translateX="900" onMouseClicked="#randomPassword"/>


</Pane>
