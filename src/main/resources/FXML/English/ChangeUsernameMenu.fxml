<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ChangeUsernameController"
            prefHeight="780.0" prefWidth="750.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="Change Username Menu" alignment="CENTER"/>
            <TextField promptText="NewUsername" maxWidth="300" fx:id="username"/>
            <TextField promptText="NewPassword" maxWidth="300" fx:id="password"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="submit" onMouseClicked="#change" minWidth="30" maxWidth="200"/>
                <Button text="back" onMouseClicked="#back" minWidth="30" maxWidth="200"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
