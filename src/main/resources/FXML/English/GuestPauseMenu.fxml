<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.PauseController"
            prefHeight="500.0" prefWidth="600.0">
    <center>

        <VBox alignment="CENTER" spacing="40">
            <Label text="Pause Menu" alignment="CENTER"/>
            <VBox alignment="CENTER" spacing="20">
                <Button text="Continue" onMouseClicked="#resume" minWidth="30" maxWidth="200"/>
                <Button text="Restart" onMouseClicked="#restart" minWidth="30" maxWidth="200"/>
                <Button text="Stop Music" onMouseClicked="#stopMusic" minWidth="30" maxWidth="200"/>
                <Button text="Keys Guide" onMouseClicked="#guide" minWidth="30" maxWidth="200"/>
            </VBox>
            <HBox alignment="CENTER" spacing="20">
                <Button text="music1" onMouseClicked="#music" minWidth="30" maxWidth="200"/>
                <Button text="music2" onMouseClicked="#music" minWidth="30" maxWidth="200"/>
                <Button text="music3" onMouseClicked="#music" minWidth="30" maxWidth="200"/>
            </HBox>
            <VBox alignment="CENTER">
                <Button text="Exit" onMouseClicked="#exit" minWidth="30" maxWidth="200"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>
